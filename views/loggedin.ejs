<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <meta http-equiv="refresh" content="7"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/loggedin.css">
    <link rel="icon" href="/images/logo.png">
    <title>Songs</title>
</head>

<body>
<header>
    <div class="menu_side">
        <div class="menu_song">
        <%for(i=0;i<=length-1;i++){%>
        <li class="songItem">
            <span><%=i+1%></span>
            <img onclick="asideSongs(this)" src="<%=asidesong[i].IMAGE%>" alt="<%=asidesong[i].IMAGE%>, <%=asidesong[i].AUDIO%>; <%=asidesong[i].AUD_NAME%> _ <%=asidesong[i].MOVIE_NAME%>" id="img"/>
            <h5><%=asidesong[i].AUD_NAME%>   
            <div class="subtitle" id="moviename"><%=asidesong[i].MOVIE_NAME%></div></h5>
        </li>
        <%}%> 
    </div>      
</div>


    <div class="song_side">
        <nav>
            <ul>
                <li>Discover <span></span></li>
                <li>MY LIBRARY</li>
                <li>RADIO</li>
            </ul>
            <div class="search">
                <i class="bi bi-search"></i>
                <input type="text" onkeyup="myFunction()" placeholder="Search Music...">
            </div>
            <div class="user">
                <img src="/images/person.png" alt="User" title="User Image">
                <small></small>
            </div>
        </nav>
        <div class="content">
            <h1>Enjoy Ad-free Songs</h1>
            <p>
                Where words fail, music speaks
                <br>
                One good thing about music, when it hits you, you feel no pain.
            </p>
            <div class="buttons">
                <button>PLAY</button>
                <button>FOLLOW</button>
            </div>
        </div>
        <div class="popular_song">
            <div class="h4">
                <h4>Popular Song</h4>
                <div class="btn_s">
                    <i id="left_scroll" class="bi bi-arrow-left-short"></i>
                    <i id="right_scroll" class="bi bi-arrow-right-short"></i>
                </div>
            </div>
            <div class="pop_song">
                <%for(j=0;j<=totallength-1;j++){%>
                <li class="songItem">
                    <div class="img_play">
                        <img src="<%=mainsongs[j].IMAGE%>" alt="<%=mainsongs[j].AUDIO%>" onclick="mainSongs(this)">
                        <!-- <i class="bi playListPlay bi-play-circle-fill" id="<%=j+6%>"></i> -->
                    </div>
                    <h5><%=mainsongs[j].AUD_NAME%><br><div class="subtitle"><%=mainsongs[j].MOVIE_NAME%></div></h5>
                </li>
                <%}%> 
            </div>
        </div>
        <div class="popular_artists">
            <div class="h4">
                <h4>Popular Artists</h4>
                <div class="btn_s">
                    <i id="left_scrolls" class="bi bi-arrow-left-short"></i>
                    <i id="right_scrolls" class="bi bi-arrow-right-short"></i>
                </div>
            </div>
           <div class="item">
            <%for(i=0;i<=singerslength-1;i++){%>
                <li>
                    <img src="<%=singers[i].SINGER_IMAGE%>">
                </li>
            <%}%>
            </div>
        </div>
    </div>

    <div class="master_play">
        <div class="wave">
            <div class="wave1"></div>
            <div class="wave1"></div>
            <div class="wave1"></div>
        </div>
        <img src="/album/Alan Walker On My Way.jpg" alt="" id="poster_master_play">
        <h5 id="title">Alan<br>
            <div class="subtitle">Song</div>
        </h5>
        <div class="icon">
            <button onclick="previouSong()"id="previous"><i class="bi bi-skip-start-fill" id="back"></i></button>
            <button onclick="currentSong()" id="play"><i class="bi bi-play-fill" id="masterPlay"></i></button>
            <button onclick="nextSong()" id="next"><i class="bi bi-skip-end-fill" id="next"></i></button>
        </div>
        <span id="currentStart">0:00</span>
        <div class="bar">
            <input type="range" id="seek" min="0" value="0" max="100" onclick="changeDuration()">
            <div class="bar2" id="bar2"></div>
            <div class="dot"></div>
        </div>
        <span id="currentEnd">0:00</span>

        <div class="vol">
            <i class="bi bi-volume-down-fill" id="vol_icon"></i>
            <input type="range" id="vol" min="0" value="30" max="100">
            <div class="vol_bar"></div>
            <div class="dot" id="vol_dot"></div>
        </div>
</div>
</header>
</body>
